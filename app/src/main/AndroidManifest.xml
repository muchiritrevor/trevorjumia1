<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.trevorjumia">

    <application
        android:name=".AppController"
        android:allowBackup="true"
        android:icon="@mipmap/message"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:replace="android:icon">
        <activity android:name=".viewfeeds"></activity>
        <activity android:name=".addfeeds" />
        <activity android:name=".home" />
        <activity android:name=".register">
            <intent-filter>
                <action android:name=".register" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".makepurchase" />
        <activity android:name=".itmesdisplay">
            <intent-filter>
                <action android:name=".itemsdisplay" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".addimages"
            android:label="@string/title_activity_addimages"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name=".addimages" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>